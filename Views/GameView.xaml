<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperRockScissors_MauiGame.Views.GameView"
             xmlns:viewModel="clr-namespace:PaperRockScissors_MauiGame.ViewModels"
             x:DataType="viewModel:GameViewModel"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Margin="20">
        <Label Text="Paper, rock and scissors" FontSize="25" HorizontalTextAlignment="Center" />
        <Label Text="What do you choose" FontSize="20" HorizontalTextAlignment="Center" Margin="0, 12, 0, 10" />
        
        <ImageButton Source="paper.png" Command="{Binding ChooseCommand}" CommandParameter="Paper" HeightRequest="100" Margin="0, 0, 0, 5" />
        <ImageButton Source="rock.png" Command="{Binding ChooseCommand}" CommandParameter="Rock" HeightRequest="100" Margin="0, 0, 0, 5" />
        <ImageButton Source="scissors.png" Command="{Binding ChooseCommand}" CommandParameter="Scissors" HeightRequest="100" />
        
        <Button Text="Cancel" FontSize="16" Command="{Binding CancelCommand}" Margin="0, 5, 0, 0" />
    </VerticalStackLayout>
</ContentPage>