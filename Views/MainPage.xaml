<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperRockScissors_MauiGame.Views.MainPage"
             xmlns:viewModel="clr-namespace:PaperRockScissors_MauiGame.ViewModels"
             x:DataType="viewModel:MainViewModel"
             Shell.NavBarIsVisible="False"
             xmlns:res="clr-namespace:PaperRockScissors_MauiGame.Resources.Languages">

    <VerticalStackLayout Margin="20">
        <Label Text="{x:Static res:AppResources.MainTitle}" FontSize="25" HorizontalTextAlignment="Center" />
        <Button Text="{x:Static res:AppResources.MainPageButtonPlay}" Command="{Binding PlayRedirectCommand}" FontSize="18" Margin="0, 190, 0, 0" VerticalOptions="Center" HeightRequest="50" />
    </VerticalStackLayout>
    
</ContentPage>
