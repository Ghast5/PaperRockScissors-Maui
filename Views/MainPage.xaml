<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperRockScissors_MauiGame.Views.MainPage"
             xmlns:viewModel="clr-namespace:PaperRockScissors_MauiGame.ViewModels"
             x:DataType="viewModel:MainViewModel"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout VerticalOptions="FillAndExpand" Margin="20">
        <Label Text="Paper, rock and scissors" FontSize="25" HorizontalTextAlignment="Center" />
        <Button Text="Play" Command="{Binding PlayRedirectCommand}" FontSize="18" Margin="0, 170, 0, 0" HeightRequest="50" />
    </VerticalStackLayout>
    
</ContentPage>
