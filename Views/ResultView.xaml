<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperRockScissors_MauiGame.Views.ResultView"
             xmlns:viewModel="clr-namespace:PaperRockScissors_MauiGame.ViewModels"
             x:DataType="viewModel:ResultViewModel"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout Margin="20">
        <Label Text="Your score" FontSize="25" HorizontalTextAlignment="Center" />
        <Label Text="{Binding Score}" TextColor="{Binding ResultColor}" HorizontalTextAlignment="Center" FontSize="20" Margin="0, 22, 0, 0" />

        <Grid ColumnDefinitions="100, auto, 100" ColumnSpacing="15" HorizontalOptions="Center" Margin="0, 50">
            <Image Grid.Column="0" Source="{Binding PlayerChoice}" />
            <Label Grid.Column="1" Text="VS" FontSize="30" VerticalTextAlignment="Center" />
            <Image Grid.Column="2" Source="{Binding OponentChoice}" />
        </Grid>
        
        <Button Text="Play again" FontSize="16" Command="{Binding PlayAgainCommand}" Margin="0, 60, 0, 0" />
        <Button Text="Exit" FontSize="16" Command="{Binding ExitCommand}" Margin="0, 5" />
    </VerticalStackLayout>
</ContentPage>